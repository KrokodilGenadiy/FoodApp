<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_chip_active" /> <!-- Background color when selected -->
            <corners android:radius="6dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_chip_inactive" /> <!-- Background color when unselected -->
            <corners android:radius="6dp" /> <!-- Corner radius -->
        </shape>
    </item>
</selector>